{% extends 'base.twig' %}

{% block body %}
<section id="email" class="py-5 mt-5">
    <div>
        <div class="email card col-10 col-md-6 col-lg-5 p-5 mt-5 mx-auto justify-content-center">
            <h1 class="email__title text-center mb-4" >Mot de passe oublié ?</h1>
            <div class="alert alert-danger d-flex align-items-center mb-2 {{ form.error ? '' : 'd-none' }}" role="alert">{{ form.error ?: '' }}</div>
            <div class="alert alert-success d-flex align-items-center mb-2 {{ form.success ? '' : 'd-none' }}" role="alert">{{ form.success ?: '' }}</div>
            <form id="emailForm" action="{{ config['F_FORGOT_PASSWORD'] }}" method="POST">
                <div class="form-floating">
                    <input type="email" name="email" class="form-control" placeholder="email" value="{{ form.email ?: '' }}" required>
                    <label>Email</label>
                </div>
                <input type="hidden" name="csrfToken" value="{{ form.csrfToken }}">
                <div class="col-lg-12 text-center mt-5">
                    <button class="btn btn-primary-color" name="submit" type="submit">
                        Récupérer
                    </button>
                </div>
                <a class="d-flex justify-content-start align-items-center text-decoration-none text-muted email__login-return mt-5" href="{{ config['R_LOGIN'] }}">
                    <i class="fas fa-chevron-left email__login-return-icon"></i>
                    Retour à la connexion
                </a>
            </form>
        </div>
    </div>
</section>

{% endblock %}